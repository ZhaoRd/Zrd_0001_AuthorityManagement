               <pagination direction-links="false" total-items="pag.totalItems" ng-model="pag.currentPage" num-pages="pag.smallnumPages"></pagination><pre>The selected page no: {{pag.currentPage}}        </pre>
               <button ng-click="pag.setPage(3)" class="btn btn-info">Set current page to: 3</button>
            </div>
         </div>
         <div class="col-lg-6">
            <h4>Pager</h4>
            <pager total-items="pag.totalItems" ng-model="pag.currentPage"></pager>
            <hr/>
            <h4>Limit the maximum visible buttons</h4>
            <pagination total-items="pag.bigTotalItems" ng-model="pag.bigCurrentPage" max-size="pag.maxSize" boundary-links="true" class="pagination-sm"></pagination>
            <pagination total-items="pag.bigTotalItems" ng-model="pag.bigCurrentPage" max-size="pag.maxSize" boundary-links="true" rotate="false" num-pages="pag.numPages" class="pagination-sm"></pagination><pre>Page: {{pag.bigCurrentPage}} / {{pag.numPages}}        </pre>
         </div>
