      <!-- START row-->
      <div ng-controller="ButtonsCtrl as btn" class="row">
         <div class="col-lg-4">
            <h4>Single toggle</h4><pre>{{btn.singleModel}}        </pre>
            <button type="button" ng-model="btn.singleModel" btn-checkbox="btn-checkbox" btn-checkbox-true="1" btn-checkbox-false="0" class="btn btn-primary">Single Toggle</button>
         </div>
         <div class="col-lg-4">
            <h4>Checkbox</h4><pre>{{btn.checkModel}}        </pre>
            <div class="btn-group">
               <label ng-model="btn.checkModel.left" btn-checkbox="btn-checkbox" class="btn btn-primary">Left</label>
               <label ng-model="btn.checkModel.middle" btn-checkbox="btn-checkbox" class="btn btn-primary">Middle</label>
               <label ng-model="btn.checkModel.right" btn-checkbox="btn-checkbox" class="btn btn-primary">Right</label>
            </div>
         </div>
         <div class="col-lg-4">
            <h4>Radio &amp; Uncheckable Radio</h4><pre>{{btn.radioModel || 'null'}}        </pre>
            <div class="btn-group">
               <label ng-model="btn.radioModel" btn-radio="'Left'" class="btn btn-primary">Left</label>
               <label ng-model="btn.radioModel" btn-radio="'Middle'" class="btn btn-primary">Middle</label>
               <label ng-model="btn.radioModel" btn-radio="'Right'" class="btn btn-primary">Right</label>
            </div>
            <div class="btn-group">
               <label ng-model="btn.radioModel" btn-radio="'Left'" uncheckable="uncheckable" class="btn btn-success">Left</label>
               <label ng-model="btn.radioModel" btn-radio="'Middle'" uncheckable="uncheckable" class="btn btn-success">Middle</label>
               <label ng-model="btn.radioModel" btn-radio="'Right'" uncheckable="uncheckable" class="btn btn-success">Right</label>
            </div>
         </div>
      </div>
   </div>
</div>
